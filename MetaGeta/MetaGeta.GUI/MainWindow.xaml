<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mgds="clr-namespace:MetaGeta.DataStore;assembly=MetaGeta.DataStore" x:Class="MainWindow"
    Title="MetaGeta" Height="651" Width="932" x:Name="Window1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <Window.Resources>
        <DataTemplate DataType="{x:Type mgds:MGDataStore}" x:Name="MGDataStoreTemplate">
            <TextBlock Text="{Binding Path=Name}" Grid.Column="0"/>
        </DataTemplate>
    	<ObjectDataProvider x:Key="DataStoreManagerDS" d:IsDataSource="True" ObjectType="{x:Type mgds:DesignTimeDataStoreManager}"/>
    </Window.Resources>
	<Window.DataContext>
		<Binding Mode="OneWay" Source="{StaticResource DataStoreManagerDS}"/>
	</Window.DataContext>

    <DockPanel x:Name="DockPanel1" >
        <Grid DockPanel.Dock="Left" Width="200" x:Name="LeftHandGrid">
            <Button x:Name="btnNewDataStore" Margin="6,0,0,6" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="20" Width="20" Content="+"/>
            <Button x:Name="btnRemoveDataStore" Margin="32,0,0,6" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="20" Width="20" Content="-"/>
            <ListBox x:Name="lbDataStores" Margin="6,6,6,32" IsSynchronizedWithCurrentItem="True" SelectedIndex="0"
			 ItemsSource="{Binding Path=DataStores}"/>
        </Grid>
        <Grid DataContext="{Binding Path=SelectedItem, ElementName=lbDataStores, Mode=Default}" x:Name="RightHandGrid">
            <ListView x:Name="lvItems" Margin="8,32,8,8"
                      ItemsSource="{Binding Path=Files}" View="{Binding Path=SelectedDataStoreColumnsView, ElementName=Window1, Mode=Default}"
                      />
            <Button x:Name="btnImport" HorizontalAlignment="Left" Width="68" VerticalAlignment="Top" Height="20" Content="Import" Margin="8,8,0,0"/>
            <TextBlock Margin="80,8,0,0" VerticalAlignment="Top" Height="20" Text="{Binding Path=Name, Mode=Default}" TextWrapping="Wrap" Width="226" HorizontalAlignment="Left" x:Name="tbDataStoreName"/>
        </Grid>

    </DockPanel>
</Window>
