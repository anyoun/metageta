<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="419" Width="697" Name="Window1">
    <DockPanel Name="DockPanel1" >
        <TabControl Name="TabControl1" DockPanel.Dock="Bottom">
            <TabItem Name="tabItems" Header="Items">
                <ListView Name="lvItems">
                    <ListView.View>
                        <GridView AllowsColumnReorder="False" />
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Name="tabLog" Header="Log">
                <TextBlock Name="txtLog" FontFamily="Courier New" FontSize="9" />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
