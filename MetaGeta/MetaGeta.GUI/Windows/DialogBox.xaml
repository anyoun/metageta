<Window x:Class="MetaGeta.GUI.Windows.DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:GUI="clr-namespace:MetaGeta.GUI"
        xmlns:GUIW="clr-namespace:MetaGeta.GUI.Windows"
        xmlns:ViewModels="clr-namespace:MetaGeta.GUI.ViewModels"
        xmlns:diagnostics="clr-namespace:System.Diagnostics;assembly=WindowsBase"
        Title="DialogBox" Height="800" Width="600"
        ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight">
  
    <Grid>
        <Button Content="OK" HorizontalAlignment="Right" IsDefault="True" Margin="0,0,80,12" Name="btnOK" Padding="10,3,10,3" Width="40.007" Height="26" VerticalAlignment="Bottom"
                Command="{Binding OkCommand}" Click="btnOK_Click"/>
        <Button Content="Cancel" IsCancel="True" Margin="0,0,12,12" Name="btnCancel" Padding="10,3,10,3" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="59" 
                Command="{Binding CancelCommand}" Click="btnCancel_Click"/>
        <ContentControl Content="{Binding}" Margin="12,12,12,44" Name="contentControl1" />
    </Grid>
</Window>
