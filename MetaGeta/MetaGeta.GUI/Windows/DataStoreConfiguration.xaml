<UserControl x:Class="DataStoreConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="552" Height="482" x:Name="userControl">
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="109.848"/>
    		<ColumnDefinition Width="*"/>
    	</Grid.ColumnDefinitions>
    	<TextBox Margin="8,45,8,0" VerticalAlignment="Top" Height="47" Text="{Binding Path=DataStore.Name, ElementName=userControl, Mode=TwoWay}" TextWrapping="Wrap" Grid.Column="1"/>
    	<TextBlock Margin="8,45,8,0" VerticalAlignment="Top" Height="47" Text="Name:" TextWrapping="Wrap" HorizontalAlignment="Stretch" TextAlignment="Right"/>
    	<TextBox Margin="8,96,8,0" VerticalAlignment="Top" Height="47" Text="{Binding Path=DataStore.Description, ElementName=userControl, Mode=TwoWay}" TextWrapping="Wrap" Grid.Column="1"/>
    	<TextBlock HorizontalAlignment="Stretch" Margin="8,96,8,0" VerticalAlignment="Top" Height="47" Text="Description:" TextAlignment="Right" TextWrapping="Wrap"/>
    	<Button Margin="8,190,0,0" Content="Delete DataStore" Grid.Column="1" Width="204.152" HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" x:Name="btnDeleteDataStore"/>
    </Grid>
</UserControl>
