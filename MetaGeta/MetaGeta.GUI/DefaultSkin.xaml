<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="White" />
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="Black" />

    <SolidColorBrush x:Key="BorderBrush" Color="Gray" />
	<SolidColorBrush x:Key="ActiveBorderBrush" Color="Black" />
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#60000000" />
	
	<SolidColorBrush x:Key="SelectedItemBrush" Color="LightGray" />
    
    <Color x:Key="ButtonIconColor">#FF888888</Color>
    <SolidColorBrush x:Key="ButtonIconBrush" Color="{StaticResource ButtonIconColor}"/>
    <FontFamily x:Key="MainFont">Droid Sans</FontFamily>
    <SolidColorBrush x:Key="PressedButtonBrush" Color="Gray"/>

    <SolidColorBrush x:Key="ProgressBarEmptyBrush" Color="LightGray"/>
    <SolidColorBrush x:Key="ProgressBarFilledBrush" Color="DarkGray"/>
</ResourceDictionary>